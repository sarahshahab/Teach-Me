<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECE9"
    tools:context=".lupapassword">

    <Button
        android:id="@+id/button20"
        android:layout_width="246dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="282dp"
        android:background="#899231"
        android:onClick="reenter"
        android:text="Kirim"
        android:textColor="#edece9"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView80"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="6dp"
        android:text="Lupa Password"
        android:textAlignment="center"
        android:textColor="#68701E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView81"
        android:layout_width="273dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="313dp"
        android:layout_marginEnd="60dp"
        android:text="Masukan email anda disini, kami akan mengirimkan link ke email anda."
        android:textAlignment="center"
        android:textColor="#323505" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="88dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="114dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="140dp"
        app:srcCompat="@drawable/ic_vpn_key_black_24dp" />
</RelativeLayout>